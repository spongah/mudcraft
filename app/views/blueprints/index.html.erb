<p id="notice"><%= notice %></p>

<h2>Listing All Blueprints</h2>

<h3><%= link_to("View Map_Zone Summary", map_zones_path) %></h3>

<table class="table table-condensed table-hover table-striped">
  <thead>
    <tr>
      <th>Map zone</th>
      <th>Data type</th>
      <th>Data position</th>
      <th>Data value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blueprints.each do |blueprint| %>
      <tr>
        <td><%= link_to(blueprint.map_zone, map_zone_path(blueprint.map_zone)) %></td>
        <td><%= blueprint.data_type %></td>
        <td><%= blueprint.data_position %></td>
        <td><%= link_to(blueprint.data_value, blueprint) %></td>
        <td><%= link_to 'Edit', edit_blueprint_path(blueprint) %></td>
        <td><%= link_to 'Destroy', blueprint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blueprint', new_blueprint_path %>
