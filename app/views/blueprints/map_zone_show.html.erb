<h2> NAMES</h2>

<table class="table table-condensed table-hover table-striped">
  <thead>
    <tr>
      <th>Data position</th>
      <th>Data value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @names.each do |name| %>
      <tr>
        <td><%= link_to(name.data_position, blueprint_path(name.id)) %></td>
        <td><%= link_to(name.data_value, blueprint_path(name.id)) %></td>
        <td><%= link_to 'Edit', edit_blueprint_path(name.id) %></td>
        <td><%= link_to 'Destroy', blueprint_path(name.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
     </tr>
    <% end %>
  </tbody>
</table>

<h2> DESCRIPTIONS </h2>

<table class="table table-condensed table-hover table-striped">
  <thead>
    <tr>

      <th>Data position</th>
      <th>Data value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @descriptions.each do |description| %>
      <tr>
        <td><%= link_to(description.data_position, blueprint_path(description.id)) %></td>
        <td><%= link_to(description.data_value, blueprint_path(description.id)) %></td>
        <td><%= link_to 'Edit', edit_blueprint_path(description.id) %></td>
        <td><%= link_to 'Destroy', blueprint_path(description.id), method: :delete, data: { confirm: 'Are you sure?' } %>      
        </tr>
    <% end %>
  </tbody>
</table>

